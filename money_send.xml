    <view
        android:id="@+id/v4"
        app:layout_constraintTop_toBottomOf="@id/qian"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/guanlian"
        app:layout_constraintTop_toBottomOf="@id/v4"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x120"
            android:layout_marginLeft="@dimen/x32"
            android:textSize="@dimen/font_size_30px"
            android:layout_height="@dimen/y42"
            android:text="关联课程"/>

        <TextView
           android:layout_toLeftOf="@+id/lv_img"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="律师法律风险管理业务必... "/>


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/lv_img"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y21"
            android:src="@mipmap/back"
            android:layout_marginRight="@dimen/x30"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <view
        android:id="@+id/v5"
        app:layout_constraintTop_toBottomOf="@id/guanlian"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/guanlian">
        <TextView
            android:layout_marginTop="@dimen/y20"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y42"
            android:textSize="@dimen/font_size_30px"
            android:layout_marginLeft="@dimen/x32"
            android:text="相关产品"/>
        <ImageView
            android:layout_marginLeft="@dimen/x31"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y220"
            android:layout_marginTop="@dimen/y15"
            android:background="@drawable/sketch"/>
    </LinearLayout>

    <Button
        android:id="@+id/fabu"
        android:layout_marginTop="@dimen/y35"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/x691"
        android:layout_height="@dimen/y97"
        android:background="#EA8245"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginBottom="@dimen/y32"
        android:textColor="#fff"
        android:text="发布"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>