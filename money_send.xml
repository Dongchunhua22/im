<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x750"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:padding="10dp"
    android:layout_height="@dimen/y1334">

    <RelativeLayout
        android:id="@+id/biaoti"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x750"
        android:layout_height="@dimen/y88"
        android:layout_marginTop="@dimen/y40"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_marginRight="@dimen/x690"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y24"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_marginRight="@dimen/x338"
            android:layout_marginLeft="@dimen/x338"
            android:layout_marginTop="@dimen/x19"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/x74"
            android:layout_height="@dimen/y50"
            android:textSize="@dimen/font_size_36px"
            android:text="发布"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fenlei"
        app:layout_constraintTop_toBottomOf="@id/biaoti"
        android:background="#fff"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginLeft="@dimen/x33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">
        <TextView
            android:layout_marginLeft="@dimen/x33"
            android:layout_marginRight="@dimen/x657"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y42"
            android:textSize="@dimen/font_size_30px"
            android:text="分类"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公益"
            android:layout_marginLeft="@dimen/x570"
            android:layout_marginTop="@dimen/y20"/>





        <ImageView
            android:id="@+id/gong_iv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y22"
            android:layout_marginLeft="@dimen/x702"
            android:layout_marginRight="@dimen/x24"
            android:src="@mipmap/back"
           />
    </RelativeLayout>

    <view
        android:id="@+id/v1"
        app:layout_constraintTop_toBottomOf="@id/fenlei"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/shurubiaoti"
        android:layout_marginLeft="@dimen/x31"
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">
        <EditText
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/y25"
            android:layout_marginLeft="@dimen/x31"
            android:layout_width="@dimen/x112"
            android:layout_height="@dimen/y40"
            android:background="#fff"
            android:textSize="@dimen/font_size_28px"
            android:hint="输入标题"/>

    </RelativeLayout>

    <view
        android:id="@+id/v2"
        app:layout_constraintTop_toBottomOf="@id/shurubiaoti"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <EditText
        android:id="@+id/miaoshuxiaojie"
        app:layout_constraintTop_toBottomOf="@id/v2"
        android:layout_marginLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:background="#fff"
        android:gravity="left|top"
        android:layout_marginTop="@dimen/y30"
        android:textSize="@dimen/font_size_30px"
        android:hint="输入描述小节..."/>

    <view
        android:id="@+id/v3"
        app:layout_constraintTop_toBottomOf="@id/miaoshuxiaojie"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/jiage"
        app:layout_constraintTop_toBottomOf="@id/v3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y42"
            android:layout_marginLeft="@dimen/x32"
           android:layout_centerVertical="true"

            android:text="价格"/>
        <RadioGroup
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/mianfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/shoufei"
                android:textSize="@dimen/font_size_30px"
                android:text="免费"/>

            <RadioButton
                android:layout_marginRight="@dimen/x37"
                android:id="@+id/shoufei"

                android:textSize="@dimen/font_size_30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收费"/>
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/y649"
        >
        <TextView
            android:textSize="@dimen/font_size_22px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x62"
            android:text="小视频首页仅推送免费视频"
            android:background="#fff"
            android:textColor="#DACF5B"/>








    </RelativeLayout>





